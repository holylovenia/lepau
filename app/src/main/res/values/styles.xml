<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mocca</item>
        <item name="colorPrimaryDark">@color/darkBrown</item>
        <item name="colorAccent">@color/gold</item>
    </style>

    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mocca</item>
        <item name="colorPrimaryDark">@color/darkBrown</item>
        <item name="colorAccent">@color/gold</item>
    </style>
    
    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/mocca</item>
    </style>

</resources>
