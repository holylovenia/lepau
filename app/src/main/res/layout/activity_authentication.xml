<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beige"
    tools:context=".AuthenticationActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/activityAuthentication_cover"
        android:layout_width="match_parent"
        android:background="@drawable/lepau_cover_background"
        android:padding="20dp"
        android:src="@drawable/lepau_text"
        android:layout_height="200dp" />

    <android.support.design.widget.TabLayout
        app:tabTextAppearance="@style/TabLayoutStyle"
        android:id="@+id/activityAuthentication_tabLayout"
        android:layout_below="@id/activityAuthentication_cover"
        app:tabIndicatorColor="@color/gold"
        app:tabSelectedTextColor="@color/gold"
        android:background="@color/gold"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:tabBackground="@color/mediumBrown"
        app:tabTextColor="@color/beige" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activityAuthentication_Pager"
        android:layout_below="@id/activityAuthentication_tabLayout"
        android:layout_width="match_parent"
        android:background="@color/beige"
        android:layout_height="fill_parent" />

</RelativeLayout>