<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/historyList_dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/mediumBrown"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/historyList_horizontalLine"
            style="@style/HorizontalLine"
            android:layout_below="@id/historyList_dateTextView" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/historyList_menuListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/historyList_horizontalLine"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/menu_list"
            android:textColor="@color/mocca"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/historyList_historyPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historyList_menuListTextView"
            android:text="@string/price_rp"
            android:textColor="@color/mediumBrown" />

        <TextView
            android:id="@+id/historyList_historyPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historyList_menuListTextView"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/historyList_historyPriceLabel"
            android:textColor="@color/mediumBrown" />

    </RelativeLayout>

</android.support.v7.widget.CardView>