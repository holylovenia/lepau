<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mediumBrown"
    android:padding="20dp"
    tools:context="com.kami.lepau.OrderHistoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activityOrderHistory_orderHistoryLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/order_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_history"
                android:textSize="32sp"
                android:paddingBottom="20dp"
                android:textColor="@color/mediumBrown"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activityOrderHistory_orderHistoryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/history_back_to_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/order_button_cropped_top"
        android:text="@string/back_to_menu"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>