<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/shoppingCartList_menuTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Menu Title"
            android:textColor="@color/mediumBrown" />

        <TextView
            android:id="@+id/shoppingCartList_menuPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="10000"
            android:textColor="@color/mediumBrown" />

        <TextView
            android:id="@+id/shoppingCartList_menuQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/mediumBrown" />

        <TextView
            android:id="@+id/shoppingCartList_menuSubtotalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="10000"
            android:textColor="@color/mediumBrown" />

    </LinearLayout>

</android.support.v7.widget.CardView>